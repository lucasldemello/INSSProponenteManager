<div class="container p-4">
  <h1>Exibir Funcionário</h1>
  <p><strong>Nome:</strong> <%= @proponent.name %></p>
  <p><strong>CPF:</strong> <%= @proponent.cpf %></p>
  <p><strong>Data de Nascimento:</strong> <%= @proponent.birthdate.strftime('%d/%m/%Y') %></p>
  <p><strong>Salário:</strong> R$ <%= number_with_precision(@proponent.salary, precision: 2, delimiter: ',', separator: '.') %></p>
  <p><strong>Alíquota INSS:</strong> R$ <%= number_with_precision(@proponent.inss_discount, precision: 2, delimiter: ',', separator: '.') %></p>

  <h2>Endereço</h2>
  <% if @proponent.address.present? %>
    <div class="row">
      <div class="col">
        <p><strong>CEP:</strong> <%= @proponent.address.zip_code %></p>
      </div>
      <div class="col">
        <p><strong>Rua:</strong> <%= @proponent.address.street %></p>
      </div>
      <div class="col">
        <p><strong>Número:</strong> <%= @proponent.address.building_number %></p>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p><strong>Bairro:</strong> <%= @proponent.address.district %></p>
      </div>
      <div class="col">
        <p><strong>Cidade:</strong> <%= @proponent.address.city %></p>
      </div>
      <div class="col">
        <p><strong>Estado:</strong> <%= @proponent.address.state %></p>
      </div>
    </div>
  <% else %>
    <p>Nenhum endereço cadastrado.</p>
  <% end %>


  <h2>Telefones</h2>
  <% @proponent.proponent_phones.each do |phone| %>
    <div class="row">
      <div class="col">
        <p><strong>Tipo de telefone:</strong> <%= phone.phone_type %></p>
      </div>
      <div class="col">
        <p><strong>Número:</strong> <%= phone.phone_number %></p>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p><strong>Observação:</strong> <%= phone.info %></p>
      </div>
    </div>
    <hr>
  <% end %>

  <div class="row">
    <div class="col">
      <%= link_to 'Editar', edit_proponent_path(@proponent), class: 'btn btn-primary' %>
    </div>
    <div class="col">
      <%= link_to 'Voltar', proponents_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
